<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_gray"
    android:layout_height="500dp">
    <TextView
        android:clickable="true"
        android:drawableLeft="@drawable/home_arrow_left_hot"
        android:id="@+id/tv_hot"
        android:text="@string/new_day_groom"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:drawablePadding="8dp"
        android:textSize="@dimen/seck_size"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:textSize="@dimen/seck_size"
        android:text="@string/find_more"
        android:drawableRight="@drawable/home_arrow_right"
        android:textColor="@color/main_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hot_more"/>
    <GridView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="8dp"
        android:layout_marginRight="8dp"
        android:verticalSpacing="8dp"
        android:id="@+id/gv_hotmain"
        android:layout_below="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="2"
        >
    </GridView>
</RelativeLayout>
