<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/stl_switch"
        tl:tl_bar_color="@color/main_gray"
        tl:tl_indicator_color="@color/main_red"
        tl:tl_indicator_margin_bottom="4dp"
        android:layout_centerInParent="true"
        tl:tl_indicator_margin_left="4dp"
        tl:tl_indicator_margin_right="4dp"
        android:layout_gravity="center"
        tl:tl_indicator_margin_top="4dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        tl:tl_tab_width="80dp"
        >

    </com.flyco.tablayout.SegmentTabLayout>
        <ImageButton
            android:id="@+id/ib_search"
            android:button="@null"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_search_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/white1"
    ></View>

    <FrameLayout
        android:id="@+id/fr_type_container"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>