<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="200dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/home_arrow_left_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/seck_distance"
            android:textSize="@dimen/seck_size"
            android:layout_width="wrap_content"
            android:textColor="@color/main_black"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="00:00:00"
            android:id="@+id/tv_seck_time"
            android:textSize="@dimen/seck_size"
            android:background="@drawable/seck_time_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:clickable="true"
            android:textSize="@dimen/seck_size"
            android:text="@string/find_more"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="50dp"
            android:drawableRight="@drawable/home_arrow_right"
            android:textColor="@color/main_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_seck_more"/>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_seck"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>